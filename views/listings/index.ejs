<% layout("/layouts/boilerplate") %>
<%= success %>
    <h3>All Listings </h3>
   <!--<form  method="GET" action="/listings/new ">
        <button>Create New Listing  </button>
    </form>-->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%=listing._id %>" class="listing-link">
            <div class="card col listing-card" style="width: 20rem;">
                <img src="<%= listing.image?.url || 'https://via.placeholder.com/300x200' %>" class="card-img-top" alt="listing_image" style="height: 20rem" />

                <div class="card-img-overlay"></div>
        
                <div class="card-body">
  <p class="card-text">
    <b><%= listing.title %></b><br/>
    <strong>â‚¹<%= (listing.price || 0).toLocaleString("en-IN") %></strong> / night<br/>
    <strong>Location:</strong> <%= listing.location %>, <%= listing.country %><br/>
    <strong>Description:</strong> <%= listing.description %>
  </p>
</div>

              </div>
            </a>
              <% } %> 
    </div>
   
  
